<?xml version="1.0" encoding="UTF-8"?>
<configuration>
    <!-- Console Appender WITH traceId/spanId -->
    <appender name="CONSOLE" class="ch.qos.logback.core.ConsoleAppender">
        <encoder>
            <pattern>%d{yyyy-MM-dd'T'HH:mm:ss.SSSXXX} %-5level [%X{spring.application.name:-order-service},%X{traceId:-},%X{spanId:-}] --- [%thread] %logger{39} : %msg%n</pattern>
        </encoder>
    </appender>

    <!-- Root logger -->
    <root level="INFO">
        <appender-ref ref="CONSOLE"/>
    </root>

    <!-- Your package DEBUG -->
    <logger name="com.example.order" level="DEBUG"/>
    <logger name="org.springframework.kafka" level="INFO"/>
</configuration>
